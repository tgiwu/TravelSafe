<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/phone_number_slot"
    android:layout_marginStart="@dimen/system_padding"
    android:layout_marginEnd="@dimen/system_padding">
    <Spinner
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:id="@+id/login_country_code_spinner"
        android:spinnerMode="dropdown"
        android:entries="@array/country_code_array"
        android:layout_alignTop="@+id/login_phone_number_edt"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/login_phone_number_edt"
        android:layout_marginTop="44dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:hint="@string/login_phone_number_hint"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/login_country_code_spinner" />
</RelativeLayout>